{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "assist": {
    "enabled": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/pnpm-lock.yaml",
      "!**/node_modules",
      "!**/build",
      "!**/dist",
      "!**/.claude",
      "!**/.next",
      "!**/.source"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "lineWidth": 120,
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  }
}
