{
  "name": "graneet-form",
  "version": "3.0.0-next.6",
  "homepage": "https://github.com/graneet/graneet-form",
  "keywords": [
    "react",
    "form",
    "forms",
    "validation",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/graneet/graneet-form/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/graneet/graneet-form.git"
  },
  "sideEffects": false,
  "license": "MIT",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --config tsup.config.ts --env.NODE_ENV development",
    "build": "tsup --config tsup.config.ts --env.NODE_ENV production",
    "lint": "biome lint ./src ./app ./docs",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "test": "exit 0"
  },
  "devDependencies": {
    "@types/node": "22.15.17",
    "@types/react": "19.1.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "rollup": "4.40.2",
    "tslib": "2.8.1",
    "tsup": "8.4.0",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18 || ^19"
  }
}
