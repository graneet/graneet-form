{
  "name": "graneet-form",
  "keywords": [
    "react",
    "form",
    "forms",
    "validation",
    "typescript"
  ],
  "homepage": "https://github.com/graneet/graneet-form",
  "bugs": {
    "url": "https://github.com/graneet/graneet-form/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:graneet/graneet-form.git"
  },
  "sideEffects": false,
  "private": true,
  "license": "MIT",
  "scripts": {
    "start:dev": "pnpm -r dev",
    "build:docs": "pnpm --filter graneet-form-documentation build",
    "biome:check": "biome check .",
    "biome:write": "biome check --write .",
    "release": "pnpm --filter graneet-form build && changeset publish",
    "test": "exit 0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "typescript": "5.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@swc/core",
      "@tailwindcss/oxide",
      "core-js",
      "esbuild",
      "sharp"
    ]
  }
}
