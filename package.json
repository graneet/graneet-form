{
  "name": "graneet-form",
  "version": "2.0.0-beta.1",
  "keywords": [
    "react",
    "form",
    "forms",
    "validation",
    "typescript"
  ],
  "homepage": "https://github.com/graneet/graneet-form",
  "bugs": {
    "url": "https://github.com/graneet/graneet-form/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:graneet/graneet-form.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "start": "tsup --config tsup.config.ts --env.NODE_ENV development",
    "build": "tsup --config tsup.config.ts --env.NODE_ENV production",
    "lint": "eslint ./",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "test": "exit 0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@types/node": "18.0.6",
    "@types/react": "18.0.15",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "5.30.7",
    "eslint": "8.20.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "standard-version": "9.5.0",
    "tslib": "2.4.0",
    "tsup": "6.1.3",
    "typescript": "4.7.4"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18"
  }
}
