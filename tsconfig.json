{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "strict": true,
    "types": ["node"],
    "isolatedModules": true
  },
  "exclude": ["node_modules", "dist"]
}
